<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_report_action" model="ir.actions.report">
        <field name="name">Property Report</field>
        <field name="model">property</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field>
        <field name="report_name">Real_Estate_Odoo.property_report_template</field>

    </record>

 <template id="property_report_template">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <style>
                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 20px;
                }
                table, th, td {
                    border: 1px solid #ddd;
                }
                th {
                    background-color: #f2f2f2;
                    padding: 8px;
                    text-align: center;
                    font-weight: bold;
                    font-size: 18px;
                }
                td {
                    padding: 8px;
                    text-align: left;
                    font-size: 16px;
                }
                h1 {
                    font-size: 24px;
                    margin-bottom: 20px;
                }
            </style>
            <t t-foreach="docs" t-as="o">
                <h1 style="font-family:'Doto_Rounded-Black';">Property(<span t-field="o.name"/>) </h1>
                <table>
                    <thead>
                        <tr>
                            <th colspan="4">General Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td><t t-esc="o.name"/> </td>
                            <td>Postcode</td>
                            <td><t t-esc="o.postcode"/> </td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>

                   <table>
                    <thead>
                        <tr>
                            <th >Description</th>
                            <th >Area (m2)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.lines_ids" t-as="line" >
                             <tr>
                            <td ><t t-esc="line.description"/> </td>
                            <td ><span t-field="line.area"/> </td>
                        </tr>

                        </t>
                    </tbody>
                </table>

            </t>
        </t>
    </t>
</template>



</odoo>
