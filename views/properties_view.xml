<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="property_view_tree" model="ir.ui.view">
            <field name="name">Property tree view</field>
            <field name="model">property</field>
             <field name="arch" type="xml">
                 <tree>
                     <field name="name"/>
                     <field name="postcode"  />
                     <field name="date_availabilty"/>
                     <field name="expect_price"/>
                     <field name="bedroom"/>
                     <field name="garage"/>
                     <field name="garden"/>
                     <field name="living_area" optional="1"/>
                 </tree>
             </field>

        </record>


        <record id="property_view_form" model="ir.ui.view">
            <field name="name">Property form view</field>
            <field name="model">property</field>
             <field name="arch" type="xml">
                 <form>
                     <sheet >

                         <div class="'oe-title">
                             <label for="name"/>
                             <h1>
                                 <field name="name"/>
                             </h1>
                         </div>
                         <group>

                         <group string="General info">
                      <field name="postcode"  />
                     <field name="date_availabilty"/>
                     <field name="expect_price"/>
                     <field name="selling_price"/>

                         </group>
                         <group string="Addtionsl info">
                     <field name="bedroom"  />
                     <field name="living_area"/>
                     <field name="facades"/>
                     <field name="garage"/>
                     <field name="garden"/>
                     <field name="garden_area"/>
                     <field name="garden_oriantation"/>

                         </group>
                              <group string="Description">
                                  <field name="description"/>

                         </group>
                         </group>
                     </sheet>
                 </form>
             </field>

        </record>




        <record id="property_action" model="ir.actions.act_window">
            <field name="name">Property action</field>
            <field name="res_model">property</field>

        </record>


        <menuitem id="property_menu_item"
            name="properties_menu"
            parent="properties_menu"
            action="property_action"
        />

    </data>
</odoo>
